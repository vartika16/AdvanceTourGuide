<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/gradient"
    android:layout_marginTop="10dp"
    tools:context="com.example.vartikajain.advancetourguide.MainActivity">

    <ImageView
        android:id="@+id/ivBack"
        android:src="@drawable/ic_arrow_back_pink_a200_24dp"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_marginTop="3dp"
        android:layout_marginLeft="13dp"
        android:text="Your location"
        android:textSize="17sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_marginLeft="7dp"
        android:layout_marginTop="7dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:src="@drawable/ic_location_on_pink_a200_24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tvLocation"
            android:text="Detecting Location"
            android:textColor="@color/cardview_dark_background"
            android:textStyle="bold"
            android:textSize="19sp"
            android:layout_marginLeft="3dp"
            android:layout_width="240dp"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tvChange"
            android:text="CHANGE"
            android:textColor="#FF4081"
            android:textStyle="bold"
            android:layout_marginLeft="20dp"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
    </LinearLayout>

    <View
        android:layout_marginTop="2dp"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"/>

    <LinearLayout
        android:layout_marginLeft="7dp"
        android:layout_marginTop="7dp"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:src="@drawable/ic_my_location_pink_a200_24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tvCurrentLoc"
            android:text="Use Current Location"
            android:textColor="@color/cardview_dark_background"
            android:textStyle="bold"
            android:textSize="19sp"
            android:layout_width="240dp"
            android:layout_marginLeft="5dp"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"/>

    <FrameLayout
            android:id="@+id/flFragContainer"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="0dp">
    </FrameLayout>

    <FrameLayout
        android:id="@+id/flRecommendContainer"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">
    </FrameLayout>


</LinearLayout>
